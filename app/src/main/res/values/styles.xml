<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="popupMenuStyle">@style/popup_menu</item>
    </style>

    <style name="popup_menu">
        <item name="android:colorBackground">#FFFFFF</item>
    </style>

    <style name="TitleTextStyle" >
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/titleTextColor</item>
    </style>

    <style name="DescriptionTextStyle" >
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/descriptionTextColor</item>
    </style>

</resources>
